@model ProductoCarrito

<div class="card h-100">

    <img src="@((Model.Producto?.ArchivoId == null) 
        ? "https://placehold.co/300x200/FFF/999/?text=Articulo" 
        : $"{ViewBag.Url}/api/archivos/{Model.Producto.ArchivoId}")"
        alt="@Model.Producto?.Titulo"
        class="card-img-top" style="max-height: 200px;">

    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Model.Producto?.Titulo</h5>
        <p class="fw-bold text-primary">$ @Model.Producto?.Precio</p>

        <p class="mb-1">Cantidad: <strong>@Model.Cantidad</strong></p>

        <div class="mt-auto">
            <form method="post" asp-controller="Carrito" asp-action="ModificarCantidad" class="d-inline">
                <input type="hidden" name="IdCarrito" value="@Model.IdCarrito" />
                <input type="hidden" name="IdProducto" value="@Model.IdProducto" />
                
                <input type="number" name="Cantidad" min="1" value="@Model.Cantidad"
                       class="form-control form-control-sm w-auto d-inline" />
                <button type="submit" class="btn btn-sm btn-primary mt-2">Actualizar</button>
            </form>

            <form method="post" asp-controller="Carrito" asp-action="EliminarProducto" class="d-inline ms-2">
                <input type="hidden" name="IdCarrito" value="@Model.IdCarrito" />
                <input type="hidden" name="IdProducto" value="@Model.IdProducto" />

                <button type="submit" class="btn btn-sm btn-danger mt-2">Eliminar</button>
            </form>
        </div>
    </div>

</div>

@model Carrito

@{
    ViewData["Title"] = "Carrito de compras";
    ViewData["SubTitle"] = "Listado";
}

<h2 class="text-center mb-3">
    @ViewData["Title"] <small class="text-muted fs-5">@ViewData["SubTitle"]</small>
</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div id="alert-success" class="alert alert-success mt-3" role="alert">
        @TempData["SuccessMessage"]
    </div>

    <script>
        setTimeout(() => {
            const alertBox = document.getElementById("alert-success");
            if (alertBox) alertBox.style.display = "none";
        }, 2000);
    </script>
}

@if (Model.ItemsCarrito == null || Model.ItemsCarrito.Count == 0)
{
    <div class="mt-5">
        <div class="alert alert-warning" role="alert">
            Tu carrito está vacío.
        </div>
    </div>

    <div class="text-center">
        <a class="btn btn-primary" asp-controller="Comprar" asp-action="Index">Ver productos</a>
    </div>
}
else
{
    <div class="row small mb-3">
        <div class="col text-end">
            Mostrando @Model.ItemsCarrito.Count productos
        </div>
    </div>

    <div class="row g-3">
        @foreach (var item in Model.ItemsCarrito)
        {
            <div class="col-md-4">
                @await Html.PartialAsync("_CarritoCardPartial", item)
            </div>
        }
    </div>

    <div class="mt-4 text-end">
        <h4>Total: <span class="text-success fw-bold">$ @Model.Total</span></h4>

        <form id="formComprar" method="post" asp-controller="Carrito" asp-action="Comprar">
    <input type="hidden" name="IdCarrito" value="@Model.Id" />
</form>

<button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#confirmarCompraModal">
    Finalizar Compra
</button>

<div class="modal fade" id="confirmarCompraModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">Confirmar compra</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        ¿Estás seguro que deseas finalizar la compra? Los cargos se aplicarán a tu método de pago seleccionado.
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>

        <button type="button" class="btn btn-primary" id="btnConfirmarCompra">
          Sí, finalizar compra
        </button>
      </div>

    </div>
  </div>
</div>

<script>
document.getElementById("btnConfirmarCompra").addEventListener("click", () => {
    document.getElementById("formComprar").submit();
});
</script>


        <div class="mt-3">
            <a asp-controller="Comprar" asp-action="Index" class="btn btn-outline-primary">
                Seguir viendo productos
            </a>
        </div>
    </div>
}
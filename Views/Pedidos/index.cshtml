@model List<Pedido>
@{
    ViewData["Title"] = "Pedidos";
    ViewData["SubTitle"] = "Listado";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb small">
        <li class="breadcrumb-item active" aria-current="page">@ViewData["SubTitle"]</li>
    </ol>
</nav>

<h2 class="text-center mb-3">@ViewData["Title"] <small class="text-muted fs-5">@ViewData["SubTitle"]</small></h2>

<div class="row small mb-3">
    <div class="col text-end">
        Mostrando @Model.Count() elementos
    </div>
</div> 

@if (Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered small">
            <thead class="text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Cliente)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Fecha)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Productos)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Total)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Cliente)</td>
                        <td>
                            @TimeZoneInfo.ConvertTimeBySystemTimeZoneId(Convert.ToDateTime(item.Fecha), "America/Mexico_City")
                        </td>
                        <td>
                            <table class="table mb-0">
                                <thead class="text-center">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.First().Productos.First().Titulo)</th>
                                        <th>@Html.DisplayNameFor(model => model.First().Productos.First().Cantidad)</th>
                                        <th>@Html.DisplayNameFor(model => model.First().Productos.First().Precio)</th>
                                        <th>@Html.DisplayNameFor(model => model.First().Productos.First().Subtotal)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var producto in item.Productos)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => producto.Titulo)</td>
                                            <td class="text-center">@Html.DisplayFor(modelItem => producto.Cantidad)</td>
                                            <td class="text-end">$@Html.DisplayFor(modelItem => producto.Precio)</td>
                                            <td class="text-end">$@Html.DisplayFor(modelItem => producto.Subtotal)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Total)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-5">
        <div class="alert alert-warning" role="alert">
            No se han encontrado elementos. Inténtelo de nuevo más tarde.
        </div>
    </div>
}